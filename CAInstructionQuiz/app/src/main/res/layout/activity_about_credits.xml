<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about_credits"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.billy.cainstructionquiz.AboutCredits">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aboutTitleTxtView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/aboutTitleTxtView_message"
        android:textSize="@dimen/about_credits_title_text_size"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_length"
        android:id="@+id/aboutSeparator"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/aboutTitleTxtView"
        android:layout_marginTop="@dimen/between_small_space"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/between_small_space"
        android:id="@+id/aboutMessageTxtView"
        android:layout_below="@id/aboutSeparator"
        android:textSize="@dimen/about_credits_message_text_size"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/creditsTitleTxtView"
        android:textSize="@dimen/about_credits_title_text_size"
        android:text="@string/creditsTitleTxtView_message"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        android:layout_marginTop="@dimen/between_space"
        android:layout_below="@id/aboutMessageTxtView"
        android:layout_alignEnd="@id/aboutTitleTxtView"/>

    <View
        android:layout_width="match_parent"
        android:id="@+id/creditsSeparator"
        android:layout_height="@dimen/separator_length"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/creditsTitleTxtView"
        android:layout_marginTop="@dimen/between_small_space"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/between_small_space"
        android:id="@+id/creditsMessageTxtView"
        android:layout_below="@+id/creditsSeparator"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/about_credits_message_text_size"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"/>

</RelativeLayout>
